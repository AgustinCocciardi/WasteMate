<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Sensores">

        <TextView
            android:id="@+id/tvAdminSettingsTitle"
            android:layout_width="225dp"
            android:layout_height="92dp"
            android:gravity="center"
            android:text="WasteMate"
            android:textAlignment="center"
            android:textSize="34sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.082" />

        <TextView
            android:id="@+id/tvWeightLimit"
            android:layout_width="162dp"
            android:layout_height="49dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="72dp"
            android:autoText="false"
            android:text="Limite Peso"
            android:textAlignment="center"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvAdminSettingsTitle" />

        <TextView
            android:id="@+id/tvCriticalCapacity"
            android:layout_width="178dp"
            android:layout_height="54dp"
            android:layout_marginTop="36dp"
            android:autoText="false"
            android:text="Limite Capacidad Critica"
            android:textAlignment="center"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="@+id/tvWeightLimit"
            app:layout_constraintTop_toBottomOf="@+id/tvWeightLimit" />

        <TextView
            android:id="@+id/tvMinimumDistance"
            android:layout_width="178dp"
            android:layout_height="54dp"
            android:layout_marginTop="28dp"
            android:autoText="false"
            android:text="Limite Distancia Minima"
            android:textAlignment="center"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="@+id/tvCriticalCapacity"
            app:layout_constraintTop_toBottomOf="@+id/tvCriticalCapacity" />

        <EditText
            android:id="@+id/txtWeightLimit"
            android:layout_width="147dp"
            android:layout_height="50dp"
            android:layout_marginTop="72dp"
            android:layout_marginEnd="32dp"
            android:ems="10"
            android:inputType="numberDecimal"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvAdminSettingsTitle" />

        <EditText
            android:id="@+id/txtCriticalCapacity"
            android:layout_width="146dp"
            android:layout_height="47dp"
            android:layout_marginTop="36dp"
            android:layout_marginEnd="32dp"
            android:ems="10"
            android:inputType="numberDecimal"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtWeightLimit" />

        <Button
            android:id="@+id/btnSendSettings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="49dp"
            android:text="Enviar"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvMinimumDistance" />

        <EditText
            android:id="@+id/txtMinimumDistance"
            android:layout_width="146dp"
            android:layout_height="47dp"
            android:layout_marginTop="36dp"
            android:layout_marginEnd="32dp"
            android:ems="10"
            android:inputType="numberDecimal"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtCriticalCapacity" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>